# SkillSync Environment Configuration

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL (Production) - Uncomment and configure for production
# DATABASE_URL=postgresql://user:password@localhost:5432/skillsync

# SQLite (Development) - Default
DATABASE_URL=sqlite:///./skillsync.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret Keys - CHANGE THESE IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production-min-32-chars

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT=100/minute

# =============================================================================
# JOB API KEYS
# =============================================================================
# Adzuna API (https://developer.adzuna.com/)
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_API_KEY=your_adzuna_api_key

# The Muse API (https://www.themuse.com/developers/api/v2)
THEMUSE_API_KEY=your_themuse_api_key

# RemoteOK (No API key required)

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI API (optional - for advanced features)
OPENAI_API_KEY=your_openai_api_key

# ML Mode (true/false)
ML_MODE_ENABLED=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=skillsync.log

# =============================================================================
# APPLICATION
# =============================================================================
# Environment (development/staging/production)
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Debug Mode (true/false)
DEBUG=true
